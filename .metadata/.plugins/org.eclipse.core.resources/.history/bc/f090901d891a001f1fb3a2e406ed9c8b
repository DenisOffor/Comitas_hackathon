#include "ds18b20.h"
#include "UART_for_PC.h"
#include "TH02.h"

int __io_putchar(int ch) {
	uint8_t ch8 = ch & 0xFF;
	UART_send_data(ch8);
	return ch;
}

void StartHSE(void);

