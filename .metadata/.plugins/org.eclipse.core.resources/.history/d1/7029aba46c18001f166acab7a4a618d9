#include "ds18b20.h"
#include "UART_for_PC.h"
#include <stdio.h>

int __io_putchar(int ch) {
	uint8_t ch8 = ch & 0xFF;
	UART_send_data(ch8);
	return ch;
}

int main(void)
{
	init_DS18B20();
	init_USART();
